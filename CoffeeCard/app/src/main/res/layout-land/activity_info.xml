<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="wrap_content"
    android:layout_height="wrap_content" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.coffeecard.coffeecard.Activities.InfoActivity"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:contentDescription="@string/InfoName"
        android:cropToPadding="false"
        android:src="@drawable/coffeecup" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="false"
        android:layout_alignParentTop="false"
        android:layout_alignParentLeft="false"
        android:text="@string/InfoName"
        style="@style/Base.TextAppearance.AppCompat.Title"
        android:padding="5dp"
        android:layout_alignParentBottom="false"
        android:layout_toRightOf="@+id/imageView" />

   <TextView
        android:id="@+id/address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/InfoAddress"
        style="@style/Base.TextAppearance.AppCompat.Title"
        android:padding="5dp"
        android:layout_marginLeft="250dp"
        android:layout_below="@id/name"/>
    <TextView
        android:id="@+id/phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/InfoPhone"
        style="@style/Base.TextAppearance.AppCompat.Title"
        android:phoneNumber="true"
        android:padding="5dp"
        android:layout_toRightOf="@+id/imageView"
        android:layout_below="@id/address"/>

    <TextView android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/InfoEmail"
        style="@style/Base.TextAppearance.AppCompat.Title"
        android:padding="5dp"
        android:layout_toRightOf="@+id/imageView"
        android:layout_below="@id/phone"/>

    <TextView
        android:id="@+id/twitter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/InfoTwitter"
        style="@style/Base.TextAppearance.AppCompat.Title"
        android:padding="5dp"
        android:layout_toRightOf="@+id/imageView"
        android:layout_below="@id/email"/>

</RelativeLayout>
